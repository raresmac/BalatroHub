@page "/challenges"

<div class="page-fade-in challenge-page-container">
    <h1 class="page-title">THE 20 CHALLENGES</h1>
    <p class="page-subtitle">Specialized Rulesets & Completion Runs</p>

    <div class="challenge-grid">
        @foreach (var ch in AllChallenges)
        {
            <div class="challenge-ornate-card @(ch.Id == 20 ? "polychrome" : "")">
                <div class="ch-number-tag">#@ch.Id</div>
                <div class="ch-card-content">
                    <h3>@ch.Name.ToUpper()</h3>
                    <div class="video-box">
                        <YoutubePlayer VideoId="@ch.Vid" />
                    </div>
                </div>
                <div class="ch-footer">CHALLENGE COMPLETE</div>
            </div>
        }
    </div>
</div>

