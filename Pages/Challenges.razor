<style>
    .challenge-page-container {
        padding-bottom: 120px;
    }

    .page-title {
        text-align: center;
        color: var(--balatro-gold);
        text-shadow: 4px 4px black;
        font-size: 3.5rem;
        margin-top: 40px;
    }

    .page-subtitle {
        text-align: center;
        color: white;
        opacity: 0.7;
        margin-bottom: 50px;
    }

    .challenge-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
        max-width: 1250px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .challenge-ornate-card {
        background: rgba(15, 15, 15, 0.9);
        border: 2px solid var(--balatro-red);
        border-radius: 12px;
        position: relative;
        transition: 0.3s;
        box-shadow: 0 8px 25px rgba(0,0,0,0.5);
    }

        .challenge-ornate-card:hover {
            transform: scale(1.03);
            border-color: white;
        }

    .ch-number-tag {
        background: var(--balatro-red);
        color: white;
        display: inline-block;
        padding: 4px 12px;
        font-weight: bold;
        border-bottom-right-radius: 10px;
    }

    .ch-card-content {
        padding: 20px;
        text-align: center;
    }

        .ch-card-content h3 {
            font-size: 1.2rem;
            margin-bottom: 15px;
            color: var(--balatro-gold);
            text-shadow: 2px 2px black;
        }

    .ch-footer {
        background: rgba(255,255,255,0.05);
        text-align: center;
        padding: 10px;
        font-size: 0.7rem;
        color: var(--balatro-red);
        font-weight: bold;
    }
</style>