@page "/seeds"

<div class="page-fade-in seed-page-container">
    <h1 class="page-title">SEED SHOWCASE</h1>
    <p class="page-subtitle">Breaking the game with perfect RNG</p>

    <div class="seed-grid">
        @foreach (var seed in SeedList)
        {
            <div class="seed-ornate-row">
                @* Left/Main Section with Video *@
                <div class="seed-video-section">
                    <div class="seed-header">
                        <span class="seed-code">SEED: @seed.Code</span>
                    </div>
                    <YoutubePlayer VideoId="@seed.Vid" />
                </div>

                @* Right Section with Description *@
                <div class="seed-description-section">
                    <h3>@seed.Title</h3>
                    <div class="desc-divider"></div>
                    <p>@seed.Description</p>
                    <div class="seed-tags">
                        @foreach (var tag in seed.Tags)
                        {
                            <span class="tag">@tag</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    record SeedItem(string Code, string Title, string Vid, string Description, string[] Tags);

    List<SeedItem> SeedList = new() {
        new("DZLSDRX2", "Vampire Midas", "6h4-Q6UkX30", "The standout synergy is built around the Vampire Joker consuming the gold cards generated by the Midas Mask. They're both acquired by Ante 2, plus a Legendary Joker.", new[] {"Vampire", "Midas Mask", "Erratic"}),
        new("4GWETSUB", "Erratic Kings", "-nrKk-q_OjE", "The standout synergy revolves around an Erratic Deck flooded with Kings from the start, supported by a Canio Joker to capitalize on that.", new[] {"Kings", "Erratic", "Legendary"}),
        new("KTT1TDZR", "Lucky Oopses", "5pFaLG_GYU8", "The standout synergy revolves around a Magic Deck filled with Lucky Cards, enhanced by multiple Oops All 6 Jokers and a Lucky Cat.", new[] {"Ghost"}),
    };
}

<style>
    .seed-page-container {
        padding-bottom: 120px;
    }

    .page-title {
        text-align: center;
        color: var(--balatro-blue);
        text-shadow: 4px 4px black;
        font-size: 3.5rem;
        margin-top: 40px;
    }

    .page-subtitle {
        text-align: center;
        color: white;
        opacity: 0.7;
        margin-bottom: 50px;
    }

    .seed-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* 2 columns as requested */
        gap: 40px;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 30px;
    }

    .seed-ornate-row {
        display: flex;
        background: rgba(10, 10, 10, 0.9);
        border: 2px solid #333;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0,0,0,0.7);
        transition: 0.3s;
    }

        .seed-ornate-row:hover {
            border-color: var(--balatro-blue);
            transform: translateY(-5px);
        }

    .seed-video-section {
        flex: 1.2;
        padding: 15px;
        background: #000;
    }

    .seed-code {
        font-weight: bold;
        color: var(--balatro-gold);
        letter-spacing: 2px;
        font-size: 0.9rem;
    }

    .seed-description-section {
        flex: 1;
        padding: 25px;
        border-left: 1px solid #333;
        display: flex;
        flex-direction: column;
    }

        .seed-description-section h3 {
            color: white;
            margin-bottom: 10px;
            font-size: 1.3rem;
        }

    .desc-divider {
        width: 30px;
        height: 3px;
        background: var(--balatro-blue);
        margin-bottom: 15px;
    }

    .seed-description-section p {
        font-size: 0.85rem;
        color: #bbb;
        line-height: 1.5;
        flex-grow: 1;
    }

    .seed-tags {
        display: flex;
        gap: 8px;
        margin-top: 15px;
    }

    .tag {
        background: #222;
        color: var(--balatro-blue);
        border: 1px solid var(--balatro-blue);
        padding: 2px 8px;
        font-size: 0.65rem;
        border-radius: 4px;
    }

    @@media (max-width: 1200px) {
        .seed-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 800px) {
        .seed-ornate-row {
            flex-direction: column;
        }
    }
</style>